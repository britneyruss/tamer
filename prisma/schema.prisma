// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tbrs      TBR[]
  schedules Schedule[]
  feedbacks Feedback[]

  @@map("users")
}

model Book {
  id        String   @id @default(cuid())
  title     String
  author    String
  isbn      String?  @unique
  createdAt DateTime @default(now())

  tbrs      TBR[]
  schedules Schedule[]

  @@map("books")
}

model TBR {
  id        String   @id @default(cuid())
  userId    String
  bookId    String
  addedAt   DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  book      Book     @relation(fields: [bookId], references: [id], onDelete: Cascade)

  @@unique([userId, bookId])
  @@map("tbrs")
}

model Schedule {
  id         String   @id @default(cuid())
  userId     String
  bookId     String
  weekNumber Int
  startDate  DateTime
  endDate    DateTime
  status     String   @default("planned") // planned, in-progress, completed
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  book       Book     @relation(fields: [bookId], references: [id], onDelete: Cascade)

  @@map("schedules")
}

model EarlyAccess {
  id        String   @id @default(cuid())
  email     String
  createdAt DateTime @default(now())

  @@unique([email])
  @@map("early_access")
}

model Feedback {
  id           String   @id @default(cuid())
  userId       String?  // Nullable for non-authenticated users
  feedbackType String   // 'bug', 'feature', 'improvement', 'other'
  rating       Int?     // 1-5 scale, optional
  message      String   @db.Text
  pageUrl      String   // Full path where feedback was submitted
  userAgent    String?  // Browser/device info
  createdAt    DateTime @default(now())

  user         User?    @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([feedbackType])
  @@index([createdAt])
  @@map("feedback")
}
